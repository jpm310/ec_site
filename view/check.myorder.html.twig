        <table border='1px' >
               {% for value in sumArr %}
                <tr>
                     <th>注文日</th>
                        <td> {{value.regist_date}}</td>
                  </tr>
                  <tr>
                      <th>ユーザーID</th> 
                          <td>{{value.user_id}}</td>
                  </tr>
                  {% endfor %}
