                      <th>商品</th>
                          <td>{{value.item_name}}(×{{value.num}})</td>
                  </tr>
                  <tr>
                      <th>小計</th>
                    <td> &yen;{{value.price|number_format(0, '.', ',')}}</td>
                  </tr>
